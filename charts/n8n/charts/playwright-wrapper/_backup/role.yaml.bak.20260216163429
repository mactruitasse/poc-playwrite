  name: {{ include "playwright-wrapper.fullname" . }}
  namespace: {{ .Release.Namespace }}
rules:
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["get", "list", "watch"]
{{- if .Values.permissions.canCreatePods }}
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["create", "delete"]
{{- end }}
{{- end -}}
