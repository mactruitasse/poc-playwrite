apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: {{ include "playwright-wrapper.fullname" . }}
  labels:
    {{- include "playwright-wrapper.labels" . | nindent 4 }}
rules:
  # Needed to discover and manage the ephemeral Playwright MCP pods in the same namespace
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["get", "list", "watch", "create", "delete"]

  # Optional but useful for debugging/visibility
  - apiGroups: [""]
    resources: ["pods/log"]
    verbs: ["get"]

  - apiGroups: [""]
    resources: ["events"]
    verbs: ["get", "list", "watch"]
